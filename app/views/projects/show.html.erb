<div id="project-header">
  <h1> <%= best_in_place @project, :name %> </h1>
</div>

<div id="project-sidebar">
  <p>
    <b>Latitude:</b> 
    <%= @project.latitude %>
  </p>
  <p>
    <b>Longitude:</b>
    <%= @project.longitude %>
  </p>
  <p>
   <b>Address:</b>
   <%= best_in_place @project, :street %> |
   <%= best_in_place @project, :city %> |
   <%= best_in_place @project, :state %> |
   <%= best_in_place @project, :country %>
  </p>
</div>

 <%= render "maps/map_short" %>

<div id='project-array-data'>
  <h2>Add Array Details</h2>
  <% @project_arrays.each do |project_array| %>
    <%= best_in_place project_array, :name %>
  <% end %>
</div>

<div>
  Double Click when you have completed your outline of the roof or ground area
</div>
