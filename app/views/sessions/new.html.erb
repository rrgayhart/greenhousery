<h1>Greenhouser</h1>
<h3>Log In</h3>

<%= form_tag sessions_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %><br />
  <%= label_tag :password %>
  <%= password_field_tag :password %> <br />
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %> <br />
  <%= submit_tag "Login" %>
<% end %>
